{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "endpoint": "/api/gw-demo-krakend",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 100,
          "client_max_rate": 10,
          "strategy": "redis",
          "capacity": 5,
          "rate": 60,
          "redis": {
            "host": "localhost",
            "port": 6379,
            "db": 0,
            "username": "guest",
            "password": "guest",
            "timeout": 10
          }
        }
      },
      "backend": [
        {
          "host": [
            "http://host.docker.internal:8080"
          ],
          "url_pattern": "/weatherforecast",
          "method": "GET"
        }
      ]
    }
  ]
}
